        width: 100%; /* Setzt die Breite auf 100% des Container-Bereichs */
        height: auto; /* Beibehaltung der Bildhöhe entsprechend der Breite */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const container = document.querySelector('.container-test');

        const observer = new IntersectionObserver(entries => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    container.classList.add('visible');
                } else {
                    container.classList.remove('visible');
                }
            });
        }, {
            threshold: 0.75 // 1.0 bedeutet, dass 100% des Elements sichtbar sein müssen
        });

        observer.observe(container);
    });
</script>
