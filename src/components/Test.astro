        opacity: 0; /* Initial unsichtbar */
        transition: opacity 0.5s ease-in; /* Übergangseffekt für Sichtbarkeit */
    }
    .container-test.visible {
        opacity: 1; /* Sichtbar, wenn die Klasse hinzugefügt wird */
    }
    .row {
        display: flex;
        flex-direction: row;
    }
